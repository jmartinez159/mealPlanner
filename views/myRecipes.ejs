<!DOCTYPE html>
<html>
  
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link href="/css/style.css" rel="stylesheet">
  <title> My Meal Prep CST336 Final Project </title>
</head>
  
<body>
  <%- include("partials/navbar.ejs") %>
  <h1> My Recipes</h1>

   
  <div id="myRecipesColumn">
    
    <div id="myRecipesFrameTop">
      <a id="myRecipesInnerFrameTopCreateRecipesButton" class="nav" href= "/createRecipes">Create Custom Recipe</a>
      <a id="myRecipesInnerFrameTopSearchRecipesButton" class="nav" href= "/recipes">Browse All Recipes</a>
      
    </div>
    
<!-- <div id="WideLine"></div> uncomment to add a 500px wide line -->



    <% for(let i = 0; i < data.length; i++) { %>
    <br> 
    <div id="myRecipeFrame"> 
        <div id="recipeInnerFrameTop"> 
            <img id="recipeInnerFrameTopImg" src="<%=data[i].imageLink%>">
            <div id="recipeInnerFrameTopName">
              <h2><%= data[i].recipeName %></h2> 
            </div>
            <br>
            <div id="recipeInnerFrameTopIngredients">
              <h5>Ingredients:</h5>
              <br>
                <%= data[i].ingredientList %>
            </div>
        </div>
        <div id="WideLine"></div>
        <div id="recipeInnerFrameInstructions">
          <h5>Instructions:</h5>
          <br>
          <%= data[i].instructions %>
        </div> 
        <br><br>
    </div>
      
    <% } %>
    
  </div>
 
</body>
  
</html>